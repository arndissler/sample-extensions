{
  "name": "Attachment Preview",
  "description": "A sample addon that previews attachements",
  "version": "2",
  "applications": {
    "gecko": {
      "id": "attachmentPreview@sample.extensions.thunderbird.net",
      "strict_min_version": "88.0a1"
    }
  },
  "permissions": [
    "messagesRead",
    "downloads",
    "downloads.open"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "message_display_action": {
    "default_title": "Preview"
  },
  "manifest_version": 2
}
